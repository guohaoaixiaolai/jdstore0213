<div class="row">
  <div class="col-md-6">
    <% if @lixiaolai.image.present? %>
      <%= image_tag(@lixiaolai.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @lixiaolai.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @lixiaolai.description %>
      </p>
    </div>
    <div> 数量 : <%= @lixiaolai.quantity %> </div>
    <div class="lixiaolai-price"> ￥ <%= @lixiaolai.price %> </div>
    <div class="pull-right">
      <%= link_to("加入购物车", "#", :class => "btn btn-primary btn-lg btn-danger") %>
    </div>
  </div>
</div>
